<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kisa.kgh.kisa_fintech.funding_detail.FundingDetailActivity">

    <Button
        android:id="@+id/btn_content_detail_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlack"
        android:gravity="end|center_vertical"
        android:paddingRight="20dp"
        android:text="FUNDING"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_content_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_content_detail_next">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
