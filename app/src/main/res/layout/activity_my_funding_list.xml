<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_item_funding_list"
            android:layout_width="wrap_content"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/my_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_lock_lock"></ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/current_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:text="1,000,000원 달성" />

                <TextView
                    android:id="@+id/current_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:text="000%" />

                <TextView
                    android:id="@+id/remain_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:text="00일 남음" />
            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/txt_funding_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_item_funding_list"
            android:text="title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_funding_list_farmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_funding_list_title"
            android:text="farmer name"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_funding_list_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_funding_list_farmer_name"
            android:text="category" />


    </RelativeLayout>

</android.support.v7.widget.CardView>